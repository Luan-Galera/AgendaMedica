@model AgendaMedica.Models.Medico

@{
    ViewData["Title"] = "Editar Médico";
}

<div class="container">
    <h1 class="text-center display-5 mt-5">Editar <span class="fw-bold">Médico</span></h1>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MedicoId" />

        <div class="row gap-3">
            <div class="col col-md">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col col-md-4">
                <div class="form-group">
                    <label asp-for="CRM" class="control-label"></label>
                    <input asp-for="CRM" class="form-control" />
                    <span asp-validation-for="CRM" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row gap-3">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row gap-3">
            <div class="col">
                <div class="form-group">
                    <label asp-for="EspecialidadeId" class="control-label">Especialidade</label>
                    <select asp-for="EspecialidadeId" class="form-control" asp-items="ViewBag.EspecialidadeId"></select>
                </div>
            </div>
        </div>

        <div class="row gap-3 mt-3 mb-3">
            <div class="col-12 d-flex justify-content-between">
                <div>
                    <a asp-action="Index">Cancelar</a>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
