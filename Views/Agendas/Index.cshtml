@model IEnumerable<AgendaMedica.Models.Agenda>

@{
    ViewData["Title"] = "Agenda";
}

<div class="container">
    <h1 class="text-center display-5 mt-5">Criar <span class="fw-bold">Agendamentos</span></h1>

    <p>
        <a asp-action="Create" class="btn btn-primary btn-lg w-25"><i class="bi bi-plus-circle"></i> Adicionar</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente)
                </th>
                <th>
                    Médico
                </th>
                <th>
                    Data da Consulta
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Medico.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataConsulta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AgendaId" class="btn btn-info btn-outline-light"><i class="bi bi-pencil-square"></i> Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.AgendaId" class="btn btn-warning btn-outline-success"><i class="bi bi-list"></i> Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.AgendaId" class="btn btn-danger btn-outline-dark"><i class="bi bi-x-circle"></i> Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>