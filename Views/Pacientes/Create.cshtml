@model AgendaMedica.Models.Paciente

@{
    ViewData["Title"] = "Cadastro de Paciente";
}

<div class="container">
    <h1 class="text-center display-5 mt-5">Cadastro de <span class="fw-bold">Paciente</span></h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row gap-3">
            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row gap-3">
            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label">E-mail</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row gap-3">
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="DataNasc" class="control-label">Data de Nascimento</label>
                    <input type="date" asp-for="DataNasc" class="form-control" />
                    <span asp-validation-for="DataNasc" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row gap-3">
            <div class="col-12 col-md mb-3">
                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
                <div class="col-12 col-md">
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row gap-3 mb-3">
            <div class="col-12 col-md-3">
                <div class="form-group">
                    <label asp-for="CEP" class="control-label"></label>
                    <input asp-for="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="Endereco" class="control-label">Endereço</label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row gap-3 mb-3">
            <div class="col-12 col-md-5">
                <div class="form-group">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" class="form-control" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-5">
                <div class="form-group">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="UF" class="control-label"></label>
                    <input asp-for="UF" class="form-control" />
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="Prontuario" value="0" class="form-control" />

        <div class="row gap-3 mt-3 mb-3">
            <div class="col-12 d-flex justify-content-between">
                <div>
                    <a asp-action="Index">Cancelar</a>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
